{
    "name": "vscode-markdown-header-coloring",
    "displayName": "Markdown Header Coloring",
    "description": "",
    "version": "0.0.1",
    "publisher": "satokaz",
    "engines": {
        "vscode": "^1.24.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "title": "Markdown Header Coloring",
            "properties": {
                "markdown-header-coloring.destroyMode": {
                    "type": "boolean",
                    "default": false
                },
                "markdown-header-coloring.textDecoration": {
                    "type": "string",
                    "default": ""
                },
                "markdown-header-coloring.fontColor": {
                    "type": "string",
                    "default": ""
                },
                "markdown-header-coloring.backgroundColor": {
                    "type": "string",
                    "default": ""
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "hex2rgba": "0.0.1"
    }
}
